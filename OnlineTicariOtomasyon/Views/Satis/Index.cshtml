@using OnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Satış Listesi</h2>
<br />
<table id="tbl1" class="table table-striped">
    <thead>
        <tr>
            @*<th>SATIŞ ID</th>*@
            <th>ÜRÜN</th>
            <th>TARİH</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM TUTAR</th>
            <th>MÜŞTERİ</th>
            <th>PERSONEL</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
     
        </tr>
    </thead>
    @foreach (var x in Model)
    {
    <tr>
        @*<td>@x.SatisID</td>*@
        <td>@x.Urun.UrunAd</td>
        <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
        <td>@x.Adet</td>
        <td>@x.Fiyat</td>
        <td>@x.ToplamTutar</td>
        <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
        <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>

        <td><a href="/Satis/SatisGetir/@x.SatisID" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Satis/SatisDetay/@x.SatisID" class="btn btn-info">Satış Geçmişi</a></td>

    </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış</a>
