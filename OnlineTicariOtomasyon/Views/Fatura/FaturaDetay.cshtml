@using OnlineTicariOtomasyon.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Detay Sayfası </h2>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>ID</th>
        <th>AÇIKLAMA</th>
        <th>MİKTAR</th>
        <th>BİRİM FİYAT</th>
        <th>TUTAR</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaKalemID</td>
            <td>@x.Acıklama</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat ₺</td>
            <td>@x.Tutar ₺</td>
        </tr>


    }

</table>
<a href="/Fatura/YeniKalemGiris/" class="btn btn-outline-danger bnt-sm">Yeni Kalem Girişi</a>