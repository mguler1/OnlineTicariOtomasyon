@model OnlineTicariOtomasyon.Models.Sınıflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Kargo Girişi</h2>
<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.TakipKodu, "Takip Kodu")
    <input type="text" value="@ViewBag.takipkod"class="form-control"name="TakipKodu"readonly />
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Alici, "Alıcı")
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    <input type="date" name="Tarih" class="form-control" />
    <br />
    @Html.LabelFor(x => x.Aciklama, "Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info btn-sm">Kaydet</button>
</form>

