@model OnlineTicariOtomasyon.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Yap</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urunid, "Ürün Adı")
    <input type="text" name="Urunid" value="@ViewBag.dgr1" class="form form-control" readonly />
    <br />
    @Html.LabelFor(x => x.Personelid, "Personel Adı")
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Cariid, "Cari Adı")
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" class="form-control"placeholder="Adet Giriniz" id="txt1" onchange="sum()"; name="Adet"/>
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" value="@ViewBag.dgr2" class="form form-control"id="txt2" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar, "Toplam Tutar")
    <input type="text" name="ToplamTutar"class="form-control"id="txt3"readonly/>
    <br />
  
    <button class="btn btn-info btn-sm">Satış Yap</button>
</form>
<br />


<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc))
        {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>
