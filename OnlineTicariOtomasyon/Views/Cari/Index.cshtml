@using OnlineTicariOtomasyon.Models.Sınıflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Cari Listesi</h2>
<br />
<table class="table table-striped">
    <tr>
        @*<th>CARİ ID</th>*@
        <th>CARİ AD</th>
        <th>CARİ SOYAD</th>
        <th>ŞEHİR</th>
        <th>MAİL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            @*<td>@x.CariID</td>*@
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.CariID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Cari/CariDetay/@x.CariID" class="btn btn-info">Satış Geçmişi</a></td>
        </tr>
    }
</table>

<a href="/Cari/CariEkle" class="btn btn-primary">Yeni Cari</a>       